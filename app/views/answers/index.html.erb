<body>
  <section class="about" id="about">
  <h2 class="heading">Questions List</h2>  
    
    <table border="1" align="center" >  
    <tr>
      <th>Id</th><th>Question</th><th>Make an Answer</th><th>All Answers</th>
    </tr>
    <% @questions.each do |obj| %>
    <tr>
      <td><%= obj.id %></td>
      <td><%= obj.content %></td>
      <td><a href="<%= obj.id %>/new" class="answer">回答する</a></td>
      <td><a href="<%= obj.id %>/show" class="answer">みんなの回答</a></td>
    </tr>
    <% end %>
    </table>
    <p class="text-center">
      <div class="text-center"><%= paginate(@questions) %></div>
    </p>
  </section>
  </body>
